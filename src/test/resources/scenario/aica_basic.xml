<?xml version="1.0" encoding="UTF-8"?>
<scenario name="aica_basic">

    <msg method="post" uri="/aica/v1.0/internal/SelectBotCodeApi">
        <header>
            <field name="botCodeInt" type="int" value="1234"/>
            <field name="botCodeStr" type="str" value="abcd1234"/>
        </header>
        <body status="200">
            <field name="botCode" type="str" value="abcd1234"/>
        </body>
    </msg>

    <msg method="post" uri="/aica/v1.0/internal/SelectVbSetApi">
        <body status="200">
            <![CDATA[
            {
                "aiSecretary": "Y",
                "backSound": "1",
                "storeName": "목동평양냉면",
                "mngOnYn": "Y",
                "bizType": "0001",
                "bizName": "외식업종",
                "tempToken": "18f56496-3fdb-47de-8382-2b1e3ee3193f",
                "termsYn": "Y",
                "mobile": "kXNeReTYU+aOKEfA+q6iEw==",
                "deviceOs": "Android",
                "pushToken": "1234",
                "storeNick": "별칭",
                "botBizType": "9001",
                "callgateUseYn": "N"
            }
            ]]>
        </body>
    </msg>

    <msg method="post" uri="/gateway/voice/:channelCode/v1/start">
        <body status="200">
            <![CDATA[
            {
                "type": "MESSAGE",
                "sttType": "1416523158",
                "ttsType": "rsk",
                "ttsVoiceActor": "14",
                "message": [
                    {
                      "seq": 1,
                      "message": "시작 메시지 입니다.",
                      "bargeIn": false
                    }
                ]
            }
            ]]>
            <field name="sessionKey" type="str" value="[tId]"/>
            <field name="valueTest" type="str" value="[last_value]"/>
            <field name="hostTest" type="str" value="[host]"/>
            <field name="portTest" type="str" value="[port]"/>
            <field name="tId" type="str" value="[tid]"/>
        </body>
    </msg>

    <msg method="post" uri="/gateway/voice/:channelCode/v1/talk">
        <body status="200">
            <![CDATA[
            {
                "type": "MESSAGE",
                "sttType": "1416523158",
                "ttsType": "rsk",
                "ttsVoiceActor": "14",
                "message": [
                    {
                      "seq": 1,
                      "message": "대화 메시지 입니다.",
                      "bargeIn": false
                    }
                ]
            }
            ]]>
            <field name="sessionKey" type="str" value="[last_sessionKey]"/>
        </body>
    </msg>

    <msg method="post" uri="/gateway/voice/:channelCode/v1/stop">
        <body status="200">
            <![CDATA[
            {
                "type": "MESSAGE",
                "sttType": "1416523158",
                "ttsType": "rsk",
                "ttsVoiceActor": "14"
            }
            ]]>
            <field name="sessionKey" type="str" value="[last_sessionKey]"/>
            <field name="messages" type="arr">
                <![CDATA[
                [
                    {
                      "seq": 1,
                      "message": "종료 메시지 입니다.",
                      "bargeIn": false
                    }
                ]
                ]]>
            </field>
        </body>
    </msg>

</scenario>

